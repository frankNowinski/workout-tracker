<%= label_tag "Select what muscle group you would like to add a workout to:" %><br><br>
<%= f.collection_select(:muscle_group, MuscleGroup.muscle_groups, :id, :name) %><br><br>

<% 3.times do %>
  <%= f.fields_for :exercises, @workout_plan.exercises.workout.build do |e_field| %>
    <%= e_field.label 'Workout' %>
    <%= e_field.text_field :name %>

    <%= e_field.label 'Sets' %>
    <%= e_field.number_field :sets %>

    <%= e_field.label 'Reps' %>
    <%= e_field.number_field :reps %>
  <% end %><br><br>
<% end %>
