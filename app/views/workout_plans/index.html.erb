<div class="container">
  <div class="row">
    <div class="col-sm-5" id="workout-plan-list">
      <h2 id="workout-plans-header">Your Workout Plans</h2><hr><br>

      <% if @workout_plans.blank? %>
        <%= link_to 'Create your first workout!', new_workout_plan_exercise_path(current_user.new_plan), class: "workout-plan-item" %>
      <% else %>
        <% @workout_plans.each do |workout_plan| %>
          <%= render 'workout_plan_list', workout_plan: workout_plan %>
        <% end %>
      <% end %>
    </div>

    <div class="col-sm-5" id="workout-plan-list">
      <h2 id="workout-plans-header">Browse Workout Plans</h2><hr><br>

      <% if @all_workout_plans.blank? %>
        <h2 class="workout-plan-item">There are no other workouts</h2>
      <% else %>
        <% @all_workout_plans.each do |workout_plan| %>
          <%= render 'workout_plan_list', workout_plan: workout_plan %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
