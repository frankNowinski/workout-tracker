<% if @workout_plan.exercises.present? %>

  <div class="row">
    <h2 id=workout-plan-name><%= @workout_plan.name %>
      <span class="delete-container">
        <%= link_to 'X', destroy_workout_plan_path(@workout_plan), method: :delete, class: 'detele-workout-link' %>
      </span>
    </h2><br>
  </div>

  <%= render 'progress_bar' %>

  <% @workout_plan.all_muscle_groups.each do |muscle| %>
    <div class="row <%= muscle %>-group">
      <div class="container col-sm-3">
        <h2 id="table-muscle-header"><%= muscle.capitalize %></h2><br>
      </div>
      <div class="col-sm-8">
        <%= render 'workout', muscle: muscle %>
      </div>
    </div><br>
  <% end %>
<% else %>
    <h2 id='workout-plan-name'>Create a Workout Plan!</h2><br><br>
<% end %>
